    <php_minimum>5.6</php_minimum>
    <uikit_actual>3.5.9</uikit_actual>
    <scriptfile>script.php</scriptfile>

    <files>
        <filename>index.php</filename>
        <filename>component.php</filename>
        <filename>component_ajax.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>apple-touch-icon.png</filename>
        <filename>favicon.png</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
        <folder>html</folder>
    </files>

    <positions>
        <position>toolbar-left</position>
        <position>toolbar-right</position>
        <position>logo</position>
        <position>headbar</position>
        <position>navbar-left</position>
        <position>navbar-center</position>
        <position>navbar-right</position>
        <position>breadcrumb</position>
        <position>top</position>
        <position>main-top</position>
        <position>main-bottom</position>
        <position>sidebar-a</position>
        <position>sidebar-b</position>
        <position>bottom</position>
        <position>footer</position>
        <position>offcanvas</position>
    </positions>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.tpl_master3lite.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.tpl_master3lite.sys.ini</language>
    </languages>

    <config>
        <fields name="params">

            <fieldset name="basic" label="TPL_MASTER3LITE_TAB_BASIC_LABEL">
                <field name="cssUikit" type="list" label="TPL_MASTER3LITE_CSS_UIKIT_LABEL" default="uikit.min.css">
                    <option value="none">TPL_MASTER3LITE_CSS_UIKIT_NO</option>
                    <option value="uikit.css">TPL_MASTER3LITE_CSS_UIKIT_BASED</option>
                    <option value="uikit.min.css">TPL_MASTER3LITE_CSS_UIKIT_MINIFIED</option>
                    <option value="uikit-rtl.css">TPL_MASTER3LITE_CSS_UIKIT_RTL</option>
                    <option value="uikit-rtl.min.css">TPL_MASTER3LITE_CSS_UIKIT_RTLMINIFIED</option>
                </field>
                <field name="jsUikit" type="list" label="TPL_MASTER3LITE_JS_UIKIT_LABEL" default="uikit.min.js">
                    <option value="none">TPL_MASTER3LITE_JS_UIKIT_NO</option>
                    <option value="uikit.js">TPL_MASTER3LITE_JS_UIKIT_BASED</option>
                    <option value="uikit.min.js">TPL_MASTER3LITE_JS_UIKIT_MINIFIED</option>
                </field>
                <field name="jsIcons" type="list" label="TPL_MASTER3LITE_JS_ICONS_LABEL" default="uikit-icons.min.js">
                    <option value="none">TPL_MASTER3LITE_JS_ICONS_NO</option>
                    <option value="uikit-icons.js">TPL_MASTER3LITE_JS_ICONS_BASED</option>
                    <option value="uikit-icons.min.js">TPL_MASTER3LITE_JS_ICONS_MINIFIED</option>
                </field>
                <field name="jsJQ" type="radio" label="TPL_MASTER3LITE_JS_JQ_LABEL" default="0" class="btn-group">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="s1" type="spacer" hr="true" />

                <field name="systemmsg" type="list" label="TPL_MASTER3LITE_SYSTEMMSG_LABEL" default="alert">
                    <option value="alert">TPL_MASTER3LITE_SYSTEMMSG_ALERT</option>
                    <option value="notify">TPL_MASTER3LITE_SYSTEMMSG_NOTIFY</option>
                </field>
                <field name="systemmsgPos" type="list" label="TPL_MASTER3LITE_SYSTEMMSG_NOTIFYPOS_LABEL" default="top-right" showon="systemmsg:notify">
                    <option value="top-left">TPL_MASTER3LITE_SYSTEMMSG_NOTIFYPOS_TOP_LEFT</option>
                    <option value="top-center">TPL_MASTER3LITE_SYSTEMMSG_NOTIFYPOS_TOP_CENTER</option>
                    <option value="top-right">TPL_MASTER3LITE_SYSTEMMSG_NOTIFYPOS_TOP_RIGHT</option>
                    <option value="bottom-left">TPL_MASTER3LITE_SYSTEMMSG_NOTIFYPOS_BOTTOM_LEFT</option>
                    <option value="bottom-center">TPL_MASTER3LITE_SYSTEMMSG_NOTIFYPOS_BOTTOM_CENTER</option>
                    <option value="bottom-right">TPL_MASTER3LITE_SYSTEMMSG_NOTIFYPOS_BOTTOM_RIGHT</option>
                </field>
                <field name="systemmsgTimeout" type="text" label="TPL_MASTER3LITE_SYSTEMMSG_NOTIFYT_TIMEOUT_LABEL" default="5" class="input-small" showon="systemmsg:notify" />
                <field name="s2" type="spacer" hr="true" />

                <field name="omb" type="list" label="TPL_MASTER3LITE_MENUBREAKPOINT_LABEL" default="@m">
                    <option value="@s">small</option>
                    <option value="@m">medium</option>
                    <option value="@l">large</option>
                </field>
            </fieldset>
        </fields>
    </config>

</extension>
